{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "pylib Install",
            "command": "python3",
            "args": [
                "setup.py",
                "install",
                "--user"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/pylib"
            },
            "problemMatcher": []
        },
        {
            "type": "process",
            "label": "cargo watch",
            "command": "cargo",
            "args": [
                "watch",
                "-x",
                "check --all",
                "-x",
                "clippy --all"
            ],
            "problemMatcher": {
                "base": "$rustc",
                "background": {
                    "beginsPattern": "^\\[Running",
                    "endsPattern": "^\\[Finished running. Exit status"
                }
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
