{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "pylib Install",
            "command": "python3",
            "args": [
                "setup.py",
                "install",
                "--user"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/pylib"
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build `dnscapture` Docker Container",
            "command": "docker build -t projects.cispa.saarland:5005/bushart/encrypted-dns/dnscapture --rm . && docker push projects.cispa.saarland:5005/bushart/encrypted-dns/dnscapture",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/taskmanager/docker",
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build `debian-rust-nightly` Docker Container",
            "command": "./build.sh",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docker",
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build Debian binaries",
            "command": "cross build --release --target-dir=./target/cross --target=x86_64-unknown-linux-gnu -p taskmanager",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
